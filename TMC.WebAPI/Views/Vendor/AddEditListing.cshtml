@model TMC.ViewModels.ListingItemViewModel
@{
    ViewBag.Title = "Add or Edit Listing";
}

@section scripts
{
    <script src="@Url.Content("~/js/tmc.AddEditListing.js")" type="text/javascript"></script>
    @Scripts.Render("~/bundles/jqueryval")
}

<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">
                Vendor listing Edit Page
                <small>Edit your free listing here!</small>
            </h1>
            <ol class="breadcrumb">
                <li>
                    @Html.ActionLink("Home", "Index", "Home")
                </li>
                <li class="active">About</li>
            </ol>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-12">
            <ul class="nav nav-tabs">
                <li class="active"><a href="#home">Listing Details</a></li>
                <li><a href="#menu1">General Information</a></li>
                <li><a href="#menu2">Contact Info</a></li>
                <li><a href="#menu3">Other Info</a></li>
                <li><a href="#menu4">Upload Photos</a></li>
            </ul>

            <div class="tab-content">
                <div id="home" class="tab-pane fade in active">
                    <h3>Listing View</h3>
                    <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua.</p>
                    <div class="row">
                        <div class="col-lg-12">
                            @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                            {
                                @Html.AntiForgeryToken()

                                <hr />
                                @Html.ValidationSummary()
                                <div class="form-group">
                                    @Html.LabelFor(m => m.BusinessName, new { @class = "col-md-2 control-label" })
                                    <div class="col-md-6">
                                        @Html.TextBoxFor(m => m.BusinessName, new { @class = "form-control" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(m => m.ContactPerson, new { @class = "col-md-2 control-label" })
                                    <div class="col-md-6">
                                        @Html.TextBoxFor(m => m.ContactPerson, new { @class = "form-control" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(m => m.ContactEmailId, new { @class = "col-md-2 control-label" })
                                    <div class="col-md-6">
                                        @Html.TextBoxFor(m => m.ContactEmailId, new { @class = "form-control" })
                                    </div>
                                </div>

                                <div class="form-group">
                                    <div class="col-md-offset-2 col-md-10">
                                        <input type="submit" class="btn btn-default" value="Save" />
                                    </div>
                                </div>
                            }

                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-12">
                            <ul class="pager">
                                <li class="next">
                                    <a href="#" onclick="addEditListing.showNextPrevTab(1)">Next →</a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
                <div id="menu1" class="tab-pane fade">
                    <h3>General Informaton</h3>
                    <p>Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat.</p>
