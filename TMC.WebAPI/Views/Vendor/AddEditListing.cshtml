@using TMC.Web.ViewModels
@using TMC.Web.Shared
@model TMC.Web.ViewModels.ListingViewModel
@{
    ViewBag.Title = "Add or Edit Listing";
}

@section scripts
{
    <script src="@Url.Content("~/Scripts/tmc.AddEditListing.js")" type="text/javascript"></script>
    @*@Scripts.Render("~/bundles/jqueryval")*@
    <script type="text/javascript">
    $(function () {
        addEditListing = new AddEditListing();
        addEditListing.formId = '#' + '@Model.FormId';

    });
     </script>
    
    }

    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">
                    Vendor listing
                    <small>Edit your free listing here!</small>
                </h1>
                <ol class="breadcrumb">
                    <li>
                        @Html.ActionLink("Home", "Index", "Home")
                    </li>
                    <li class="active">About</li>
                </ol>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-12">
                <ul class="nav nav-tabs">
                    <li class="active"><a href="#generalInfo">General Information</a></li>
                    <li><a href="#contactDetails">Contact Details</a></li>
                    <li><a href="#keyCategories">Key Categories</a></li>
                    <li><a href="#serviceAreas">Service Areas</a></li>
                    <li><a href="#paymentModes">Payment Modes</a></li>
                    <li><a href="#media">Upload Photos</a></li>
                </ul>

                <div class="tab-content">
                    <div id="generalInfo" class="tab-pane fade in active">
                        <div class="row">
                            <div class="col-lg-12" >
                                <div id="EditListingDivId">
                                    @Html.Partial("_EditListing", Model)
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-lg-12">
                                <ul class="pager">
                                    <li class="next">
                                        <a href="#" onclick="addEditListing.showNextPrevTab(1)">Next →</a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                    <div id="contactDetails" class="tab-pane fade">
                        <div class="row">
                            <div class="col-lg-12">
                                @Html.Partial("_EditListingContacts", Model)
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-12">
                                <ul class="pager">
                                    <li class="previous">
                                        <a href="#" onclick="addEditListing.showNextPrevTab(0)">← Prev</a>
                                    </li>
                                    <li class="next">
                                        <a href="#" onclick="addEditListing.showNextPrevTab(2)">Next →</a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                    <div id="keyCategories" class="tab-pane fade">
                        <h3>Key Categories</h3>
                        <p>Sed ut perspiciatis unde omnis iste natus error sit voluptatem accusantium doloremque laudantium, totam rem aperiam.</p>
                        <div class="row">
                            <div class="col-lg-12">
                                <ul class="pager">
                                    <li class="previous">
                                        <a href="#" onclick="addEditListing.showNextPrevTab(1)">← Prev</a>
                                    </li>
                                    <li class="next">
                                        <a href="#" onclick="addEditListing.showNextPrevTab(3)">Next →</a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                    <div id="serviceAreas" class="tab-pane fade">
                        <h3>Areas of operation</h3>
                        <p>Eaque ipsa quae ab illo inventore veritatis et quasi architecto beatae vitae dicta sunt explicabo.</p>
                        <div class="row">
                            <div class="col-lg-12">
                                <ul class="pager">
                                    <li class="previous">
                                        <a href="#" onclick="addEditListing.showNextPrevTab(2)">← Prev</a>
                                    </li>
                                    <li class="next">
                                        <a href="#" onclick="addEditListing.showNextPrevTab(4)">Next →</a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                    <div id="paymentModes" class="tab-pane fade">
                        <h3>Payment Modes</h3>
                        <p>Eaque ipsa quae ab illo inventore veritatis et quasi architecto beatae vitae dicta sunt explicabo.</p>
                        <div class="row">
                            <div class="col-lg-12">
                                <ul class="pager">
                                    <li class="previous">
                                        <a href="#" onclick="addEditListing.showNextPrevTab(3)">← Prev</a>
                                    </li>
                                    <li class="next">
                                        <a href="#" onclick="addEditListing.showNextPrevTab(5)">Next →</a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                    <div id="media" class="tab-pane fade">
                        <h3>Upload Photos</h3>
                        <p>Eaque ipsa quae ab illo inventore veritatis et quasi architecto beatae vitae dicta sunt explicabo.</p>
                        <div class="row">
                            <div class="col-lg-12">
                                <ul class="pager">
                                    <li class="previous">
                                        <a href="#" onclick="addEditListing.showNextPrevTab(4)">← Prev</a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
