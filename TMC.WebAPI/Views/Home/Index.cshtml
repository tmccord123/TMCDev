@using TMC.Shared
@using TMC.Web.ViewModels
@model HomeViewModel
@{
    ViewBag.Title = "Home";
}

@section scripts{
    @Scripts.Render("~/Scripts/tmc.home.index.js")

    <script type="text/javascript">

        $(function () {
            homeIndex = new HomeIndex();
            homeIndex.cityNameControlId = '#' +  '@Model.CitySaytHome.SelectedCityNameFieldId';
            homeIndex.cityIdControlId  = '#' + '@Model.CitySaytHome.SelectedCityIdFieldId';
            homeIndex.placeIdControlId = '#' + '@Model.PlaceSaytHome.SelectedPlaceIdFieldId';
            homeIndex.categoryIdControlId = '#' + '@Model.CategorySaytHome.SelectedCategoryIdFieldId';
            homeIndex.categoryNameControlId = '#' + '@Model.CategorySaytHome.SelectedCategoryNameFieldId';
            homeIndex.initialize();
        });

    </script>
}
<style>
    .flexslider {
        margin: 0;
    }
   
    .ui-autocomplete-loading {
        background: white url("/img/autocomplete/ui-anim_basic_16x16.gif") right center no-repeat;
    }
  /*.tmc-auto { width: 25em; }*/
    .ui-autocomplete {
        max-height: 100px;
        overflow-y: auto;
  
        overflow-x: hidden;
      }
</style>

<input type="hidden" id="hdnCategoryId" />
<input type="hidden" id="hdnCategoryName" />
<input type="hidden" id="hdnPlaceId" />
<div class="row">
    <div class="searchPopup col-sm-12">

        <div class="col-sm-3 topFields" id="cities">
            
            @Html.Partial("_CitySayt", Model.CitySaytHome)
        </div>
        <div class="col-sm-4 topFields display-none" id="divPlaces">
           @Html.Partial("_PlaceSayt", Model.PlaceSaytHome)
        </div>
        <div class="col-sm-4 topFields">
            @Html.Partial("_CategorySayt", Model.CategorySaytHome)
        </div>
        <div class="col-sm-1 topFields">
            <button id="btnSearchMain" class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search"></i></button>
        </div>
    </div>
</div>

<!-- New Slider Start-->
<div class="row">
<div class="flexslider col-sm-12" style="position: relative">
   
    <ul class="slides">
        <li>
            <img src="/img/banner.jpg" alt=""></li>
        <li>
            <img src="/img/banner1.jpg" alt=""></li>
        <li>
            <img src="/img/banner2.jpg" alt=""></li>
    </ul>
    
</div>
</div>
<!-- New Slider END-->

<!-- Categories Section Start-->

<div class="section">

    <div class="container">

        <div class="row">
            <div class="col-sm-12 text-center">
                <h2>@ResourceUtility.GetCaptionFor(
                                              ResourceConstants.Common.Labels.MoreCategories)</h2>
                <hr>
            </div>
            @foreach (var category in Model.TopCategories)
            {
                <div class="col-sm-1">
                    <a href="" class="home-category-list">
                        <img class="img-responsive img-home-portfolio" src="/img/nav.png">
                        @category.ShortName
                    </a>
                </div>
            }
        <!-- /.row -->
</div>
    </div>
    <!-- /.container -->

</div>

<!-- Categories Section END-->
