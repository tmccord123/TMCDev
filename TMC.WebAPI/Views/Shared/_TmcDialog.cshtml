@using TMC.Shared
    <div id="modalDialogsContainer">

        <!-- message box -->
        <div class="modal fade" id="tmcDialogMessageBox"
             tabindex="-1" role="dialog" aria-labelledby="myModalLabel"
             aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal"
                                aria-hidden="true">
                            &times;
                        </button>
                        <h4 class="modal-title" id="tmcDialogMessageBoxHeader">
                            Message Box
                        </h4>
                    </div>
                    <div class="modal-body" id="tmcDialogMessageBoxBody">

                        <div class="row">
                            <div class="col-sm-12">
                                <p></p>

                            </div>
                        </div>

                    </div>
                    <div class="modal-footer">
                        <button id="tmcDialogMessageBoxOkButton"
                                type="button" class="btn btn-primary"
                                data-dismiss="modal" aria-hidden="true">
                            @ResourceUtility.GetCaptionFor(
                                    ResourceConstants.Common.Labels.MessageBox.ButtonOk)
                            </button>
                        </div>
                    </div>
                    <!-- /.modal-content -->
                </div>
                <!-- /.modal-dialog -->
            </div>

            <!-- confirm box -->
            <div class="modal fade" id="tmcDialogConfirmBox"
                 tabindex="-1" role="dialog" aria-labelledby="myModalLabel"
                 aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal"
                                    aria-hidden="true">
                                &times;
                            </button>
                            <h4 class="modal-title" id="tmcDialogConfirmBoxHeader">
                                Confirm Box
                            </h4>
                        </div>
                        <div class="modal-body" id="tmcDialogConfirmBoxBody">

                            <div class="row">
                                <div class="col-sm-12">
                                    <p></p>

                                </div>
                            </div>

                        </div>
                        <div class="modal-footer">
                            <button id="tmcDialogConfirmBoxOkButton"
                                    type="button" class="btn btn-primary"
                                    data-dismiss="modal" aria-hidden="true">
                                @ResourceUtility.GetCaptionFor(
                                    ResourceConstants.Common.Labels.MessageBox.ButtonOk)
                                </button>
                                <button id="tmcDialogConfirmBoxCancelButton"
                                        type="button" class="btn btn-default"
                                        data-dismiss="modal">
                                    @ResourceUtility.GetCaptionFor(
                                    ResourceConstants.Common.Labels.MessageBox.ButtonCancel)
                                    </button>

                                </div>
                            </div>
                            <!-- /.modal-content -->
                        </div>
                        <!-- /.modal-dialog -->
                    </div>

                </div>

