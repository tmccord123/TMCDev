@using TMC.Web.Shared.ViewModels
@using TMC.Web.Shared
@model TMC.Web.Shared.ViewModels.ListingViewModel
@{
    ViewBag.Title = "Add or Edit Listing";
}

@section scripts
{
    <script src="@Url.Content("~/Scripts/tmc.AddEditListing.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Content/js/lib/angular-file-upload.min.js")" type="text/javascript"></script>
 
    @*@Scripts.Render("~/bundles/jqueryval")*@
    <script type="text/javascript">
    $(function () {
        addEditListing = new AddEditListing();
        addEditListing.formId = '#' + '@Model.FormId';
        addEditListing.categoryIdControlId = '#' + '@Model.ListingCategories.CategorySaytListing.SelectedCategoryIdFieldId';
        addEditListing.categoryNameControlId = '#' + '@Model.ListingCategories.CategorySaytListing.SelectedCategoryNameFieldId';
        
        //listing Service Areas
        addEditListing.cityIdControlId = '#' + '@Model.ListingServiceLocations.CitySaytListing.SelectedCityIdFieldId';
        addEditListing.cityNameControlId = '#' + '@Model.ListingServiceLocations.CitySaytListing.SelectedCityNameFieldId';

        addEditListing.initialize();
    });
    </script>

}
 


<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">
                Vendor listing
                <small>Edit your free listing here!</small>
            </h1>
            <ol class="breadcrumb">
                <li>
                    @Html.ActionLink("Home", "Index", "Home")
                </li>
                <li class="active">About</li>
            </ol>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-12" ng-controller="ListingCtrl" >
            <ul class="nav nav-tabs">
                <li class="active"><a href="#generalInfo">General Information</a></li>
                <li><a href="#contactDetails">Contact Details</a></li>
                <li><a href="#keyCategories">Key Categories</a></li>
                <li><a href="#serviceAreas">Service Areas</a></li>
                <li><a href="#paymentModes">Payment Modes</a></li>
                <li><a href="#media">Upload Photos</a></li>
